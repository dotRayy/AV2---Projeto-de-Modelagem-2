CREATE TABLE Condominio (
    idCondominio NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    nome VARCHAR2(100) NOT NULL,
    endereco VARCHAR2(200),
    num VARCHAR2(10),
    cep VARCHAR2(20),
    bairro VARCHAR2(50),
    cidade VARCHAR2(50),
    estado VARCHAR2(20),
    proprietario VARCHAR2(100),
    cnpj VARCHAR2(20)
);

CREATE TABLE Morador (
    idMorador NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    bloco VARCHAR2(10),
    numApart NUMBER,
    valorAluguel NUMBER(10, 2),
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);

CREATE TABLE Sindico (
    idSindico NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    inicioMandato DATE,
    fimMandato DATE,
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);

CREATE TABLE Condomino (
    idCondomino NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    nome VARCHAR2(100) NOT NULL,
    cpf VARCHAR2(11) UNIQUE NOT NULL,
    email VARCHAR2(100),
    senha VARCHAR2(100) NOT NULL,
    usuario VARCHAR2(50),
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);

CREATE TABLE Tarefa (
    idTarefa NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    nome VARCHAR2(100),
    status VARCHAR2(50),
    dataConclusao DATE,
    descricao CLOB,
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);

CREATE TABLE Portaria (
    idPortaria NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    portaria VARCHAR2(50),
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);

CREATE TABLE Mensagem (
    idMensagem NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    destinatario VARCHAR2(100),
    mensagem CLOB,
    Condominio_idCondominio NUMBER,
    Portaria_idPortaria NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio),
    FOREIGN KEY (Portaria_idPortaria) REFERENCES Portaria(idPortaria)
);

CREATE TABLE Solicitacao (
    idSolicitacao NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    solicitacao CLOB,
    justificativa CLOB,
    Condominio_idCondominio NUMBER,
    FOREIGN KEY (Condominio_idCondominio) REFERENCES Condominio(idCondominio)
);
